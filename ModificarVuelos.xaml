        <Button x:Name="btnLimpiar" Content="LIMPIAR" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="197,298,0,0" Click="btnLimpiar_Click" Width="66" Height="26" Background="#a2482c" Foreground="White" FontWeight="Bold"/>
    </Grid>
